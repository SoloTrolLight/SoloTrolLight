#include <iostream>
#include <cmath>
using namespace std;
int main() {
setlocale(0, "");

int choice;

cout << "Программа для выбора погоды в сезон и дня недели\n\n";

cout << "[1] Осень\n";
cout << "[2] Зима\n";
cout << "[3] Весна\n";
cout << "[4] Лето\n";
cout << "[5] Понедельник\n";
cout << "[6] Вторник\n";
cout << "[7] Среда\n";
cout << "[8] Четверг\n";
cout << "[9] Пятница\n";
cout << "[10] Суббота\n";
cout << "[11] Воскресенье\n";
cout << "[12] Не знаю день недели\n\n";
cout << "Выберите необходимый пункт: ";

cin >> choice;
switch (choice) {
case 1:
cout << "На улице дождь, возьмите зонд";
break;
case 2:
cout << "На улице холодно, оденьтесь теплее";
break;
case 3:
cout << "На улице солнечно, давайте радоваться погоде";
break;
case 4:
cout << "На улице хорошо, можно пойти на пляж";
break;
case 5:
cout << "Начало трудовой недели, лучше выйти пораньше";
break;
case 6:
cout << "Сегодня будет проще, т.к. уже вошли в ритм";
break;
case 7:
cout << "Вот и середина рабочей недели";
break;
case 8:
cout << "Завтра уже пятница";
break;
case 9:
cout << "Пятница, можно хорошенько отдохнуть";
break;
case 10:
cout << "Сегодня можно выспаться и заняться делами";
break;
case 11:
cout << "Последний день перед понедельником,лучше сегодня лечь пораньше";
break;
case 12:
cout << "Откройте календарь в вашем телефоне и там покажется текущий день";
break;
default:
cout << "Такой погоды нет";
break;
}



int ; cin >> ;
return 0;
}
